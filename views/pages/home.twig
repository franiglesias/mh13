			 	</div>
				<div class="tabs-panel" id="mh-anuncios">
					  {{ modules.widget('mh-catalog-announces-feed', '/contents/items/catalog/limit:10/siteName:'~Home.announces~'/sticky:1/excludePrivate:1/layout:feed', 'Tablón de anuncios', '', 'mh-catalog') }}
				</div>
				<div class="tabs-panel" id="mh-resto">
					{{ modules.widget('mh-catalog-all-feed', '/contents/items/catalog/limit:10/excludePrivate:1/layout:index', 'Últimas novedades', '', 'mh-catalog') }}
				</div>
			</div>
		</div>



		<div class="small-12 medium-4 columns" data-equalizer-watch>
			{% include 'widgets/menu.twig' with {'title': 'Encuentranos en', 'menu': 'social', 'selector': 'mh-social', 'icon': 'fi-eye'} only %}
