{% import 'macros/headers.twig' as headers %}

<div class="orbit" role="region" aria-label="Images gallery" data-orbit>
    <ul class="orbit-container">
        {% for image in images %}
            <li class="orbit-slide is-active">
                {{ headers.home(image.name, image.description, image.url, '/'~image.path) }}
            </li>
        {% endfor %}
    </ul>
</div>
