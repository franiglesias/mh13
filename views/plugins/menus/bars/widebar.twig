<ul class="small-block-grid-1 medium-block-grid-3 large-block-grid-{{ menubar|length }} row">
    {% for menu in menubar %}
        <li class="column">
            <a href="{{ menu.Menu.url }}">{{ menu.Menu.label }}</a>
            {% if menu.MenuItem %}
            <ul class="menu vertical">
                {% for item in menu.MenuItem %}
                {% if item.label == '/' %}
                <li class="divider"></li>
                {% else %}
                <li><a href="{{ item.url}}">{% if item.icon %}<i class="fi-{{item.icon}}"></i>{% endif %}{{item.label}}</a></li>
                {% endif %}

                {% endfor %}
            </ul>
            {% endif %}
        </li>
    {% endfor %}
</ul>
