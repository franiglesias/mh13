<ul class="dropdown menu" data-dropdown-menu>
    {% for menu in bar.menus %}
        <li>
            <a href="{{ menu.url }}">{{ menu.label }}</a>
            {% if menu.items %}
            <ul class="menu vertical">
                {% for item in menu.items %}
                {% if item.label == '/' %}
                <li class="divider"></li>
                {% else %}
                <li><a href="{{ item.url}}">{% if item.icon %}<i class="fi-{{item.icon}}"></i>{% endif %}{{item.label}}</a></li>
                {% endif %}

                {% endfor %}
            </ul>
            {% endif %}
        </li>
    {% endfor %}
</ul>
