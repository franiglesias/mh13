{% import 'macros/blocks.twig' as blocks %}
{% set widget_body %}
	{% for label in item.Label %}
	<p class="mh-tag"><a href="/contents/channels/tagged/{{item.Channel.slug}}/{{label.Label.id}}">{{label.Label.title}}</a></p>
	{% else %}
	<p>Este artículo no ha sido etiquetado todavía.</p>
	{% endfor %}
{% endset %}
{{ blocks.widget('Etiquetas', widget_body, 'fi-price-tag') }}
