{% extends 'layouts/story.twig' %}
{% block content %}

	<div class="container mh-channel-menu">{# echo $this->Channel->menu(); #}</div>

	<article class="mh-page">
		<pre>

		</pre>
		{% if preview %}
			<aside class="mh-preview-ribbon">Así es como se verá</aside>
		{% endif %}

		{% include 'plugins/contents/items/widgets/header/plain.twig' %}
		{# echo $this->Page->block('/contents/items/widgets/header', array(
	        'imagePath' => $this->Image->value('path'),
	        'title' => $this->Item->value('title'),
	    )); #}
		{% if date(item.Item.expiration) < date('now')%}
		<div class="alert-box warning radius">
			<p>Este artículo ha caducado, por lo que la información que contiene podría no ser válida actualmente. Se mantiene por razones históricas.</p>
			<a href="#" class="close">[cerrar]</a>
		</div>
		{% endif %}
		<div class="row">
			<div class="small-12 medium-7 columns">
				{% if item.Image|length == 1 %}
					{% include 'plugins/images/image/included.twig' with {'image': item.Image[0]} only %}
				{% endif %}

				{{ item.Item.content|parse|raw }}

				{% if item.Image|length > 1 %}
					{% include ('plugins/images/galleries/'~item.Item.gallery~'/layout.twig')  %}
				{% endif %}

				{% if item.Download %}
					{% include 'plugins/contents/items/widgets/downloads.twig' %}
				{% endif %}


				{% if item.Multimedia %}
					{% include 'plugins/contents/items/widgets/multimedia.twig' %}
				{% endif %}


				{# echo $this->Comment->render('Contents.Item', $item['Item']['id'], $item['Item']['allow_comments']); #}
			</div>
			<section class="small-12 medium-4 columns">
				{% import 'macros/blocks.twig' as blocks %}
				{{ blocks.widget('Resumen', item.Item.content|length > 50 ? item.Item.content|striptags|slice(0, 50) ~ '...' : item.Item.content|striptags, 'fi-check' ) }}
				{% include 'plugins/contents/items/widgets/mdata.twig' %}
				{% include 'plugins/contents/items/widgets/social.twig' %}
				{% include 'plugins/contents/items/widgets/tags.twig' %}
				{% include 'plugins/contents/items/widgets/neighbors.twig' %}
				{% include 'plugins/contents/items/widgets/description.twig' %}
				{{ blocks.widget('Licencia', item.License.code, 'fi-info' )}}
			</section>
		</div>
	</article>
{% endblock %}
