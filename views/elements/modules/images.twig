<style>
    .slideshow {
        position: relative;
        overflow-x: hidden;
        overflow-y: visible;
        height: 500px;
    }

    .slideshow .navigation {
        position: absolute;
        top: 50%;
        width: 100%;
        z-index: 10;
    }

    .slideshow img {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
    }

    .slideshow .navigation a {
        background-color: #0a0a0a;
        color: #fff;
        text-decoration: none;
        position: relative;
        display: inline-block;
        width: 30px;
        height: 30px;
        border-radius: 80px;
        text-align: center;
        line-height: 30px;
        opacity: .4;
        transition: .5s;
    }

    .slideshow .navigation a:hover {
        opacity: 1;
    }

    .slideshow .navigation a:first-child {
        float: left;
        margin-left: 10px;
    }

    .slideshow .navigation a:last-child {
        float: right;
        margin-right: 10px;
    }

    .fade-enter-active, .fade-leave-active {
        transition: transform 1s
    }

    .fade-enter /* .fade-leave-active in <2.1.8 */
    {
        opacity: 1;
        -webkit-transform: translateX(100%);
        -moz-transform: translateX(100%);
        -ms-transform: translateX(100%);
        -o-transform: translateX(100%);
        transform: translateX(100%);
    }

    .fade-leave-to {
        opacity: 1;
        -webkit-transform: translateX(-100%);
        -moz-transform: translateX(-100%);
        -ms-transform: translateX(-100%);
        -o-transform: translateX(-100%);
        transform: translateX(-100%);
    }


</style>
